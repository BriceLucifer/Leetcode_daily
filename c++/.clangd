CompileFlags:
  # 让 clangd 按这个 driver 的“系统头/资源目录”去推导（很关键）
  Compiler: /opt/homebrew/opt/llvm/bin/clang++

  Add:
    - -std=c++2c
    - --stdlib=libc++

    # ✅ 关键：禁止默认 C++ 头搜索路径，避免混入 Apple/Xcode 的 c++/v1
    - -nostdinc++

    # ✅ 只保留 Homebrew libc++ 这一套
    - -isystem
    - /opt/homebrew/opt/llvm/include/c++/v1

    # ✅ macOS SDK（给 C 头文件用：stddef.h / stdint.h 等）
    # 如果你已经有 compile_commands.json，下面两行通常可以不写
    - -isysroot
    - /Library/Developer/CommandLineTools/SDKs/MacOSX.sdk
